<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyRegActivity"
    android:orientation="vertical"
    android:background="@color/main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/secondary"
            android:elevation="10dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            app:cardBackgroundColor="@color/secondary"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/productsansbold"
                    android:text="Enter Company Details"
                    android:textColor="@color/headline"
                    android:textSize="22dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/headline"
                    app:boxStrokeColor="@color/tertiary">

                    <EditText
                        android:id="@+id/etId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:fontFamily="@font/productsansbold"
                        android:hint="Enter id"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/headline"
                    app:boxStrokeColor="@color/tertiary">

                    <EditText
                        android:id="@+id/etCompId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:fontFamily="@font/productsansbold"
                        android:hint="Enter CompanyId"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/headline"
                    app:boxStrokeColor="@color/tertiary">

                    <EditText
                        android:id="@+id/etCompWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:fontFamily="@font/productsansbold"
                        android:hint="Enter Company Website"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/headline"
                    app:boxStrokeColor="@color/tertiary">

                    <EditText
                        android:id="@+id/etCompName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:fontFamily="@font/productsansbold"
                        android:hint="Enter Your Company Name"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/headline"
                    app:boxStrokeColor="@color/tertiary">

                    <EditText
                        android:id="@+id/etCompAddr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:fontFamily="@font/productsansbold"
                        android:hint="Enter Company Address"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/headline"
                    app:boxStrokeColor="@color/tertiary">

                    <EditText
                        android:id="@+id/etCompGst"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:fontFamily="@font/productsansbold"
                        android:hint="Enter Company GST No"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/headline"
                    app:boxStrokeColor="@color/tertiary">

                    <EditText
                        android:id="@+id/etBranchId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:fontFamily="@font/productsansbold"
                        android:hint="Enter BranchId"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/headline"
                    app:boxStrokeColor="@color/tertiary">

                    <EditText
                        android:id="@+id/etIsApproved"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:fontFamily="@font/productsansbold"
                        android:hint="IsApproved (0 or 1)"
                        android:inputType="number"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/register_card"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="20dp"
                    app:cardCornerRadius="25dp"
                    android:layout_marginBottom="15dp"
                    android:visibility="visible">

                <Button
                    android:id="@+id/btRegComp"
                    android:background="@color/button"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/productsansbold"
                    android:text="Proceed"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>